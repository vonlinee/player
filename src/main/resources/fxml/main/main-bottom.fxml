            <!--播放模式切换-->
            <Button mnemonicParsing="false" onMouseClicked="#toggleSound" maxHeight="30" minHeight="30" prefHeight="30"
                    style="-fx-background-color: rgba(255, 255, 255, 0);">
                <graphic>
                    <ImageView pickOnBounds="true" preserveRatio="true" fitWidth="25" fitHeight="25">
                        <Image url="@/img/play-model-1.png"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
            </Button>
            <!--标准音质-->
            <Button mnemonicParsing="false" onMouseClicked="#toggleSound" maxHeight="35" minHeight="35" prefHeight="35"
                    style="-fx-background-color: rgba(255, 255, 255, 0);">
                <graphic>
                    <ImageView pickOnBounds="true" preserveRatio="true" fitWidth="36" fitHeight="36">
                        <Image url="@/img/standard.png"/>
                    </ImageView>
                </graphic>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
